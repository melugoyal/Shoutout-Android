<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/map_background" android:id="@+id/login_screen"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/login_screen_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_screen_logo"/>

    <EditText
        android:id="@+id/login_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_screen_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:nextFocusForward="@+id/login_password"
        android:hint="Screen Name"/>

    <EditText
        android:id="@+id/login_password"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_username"
        android:singleLine="true"
        android:hint="Password"/>

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_password"
        android:textColor="#0000FF"
        android:background="#00FFFFFF"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/login_back_button"
            android:background="#2eceff"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:text="Back"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:id="@+id/login_next_button"
            android:background="#00e4c9"
            android:textColor="#FFFFFF"
            android:text="Log In"/>

    </LinearLayout>
</RelativeLayout>