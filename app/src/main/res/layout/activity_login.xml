<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shoutout2.app.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_field"
        android:textSize="22sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="Welcome to Shoutout.\nBroadcast your thoughts.\nSee what's happening.\nKnow who's there.\nAll in real time."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup_button"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/text_field"
        android:text="Sign up"/>


    <ImageView
        android:layout_width="@dimen/login_screen_pic_size"
        android:layout_height="@dimen/login_screen_pic_size"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_button"
        android:background="@drawable/shoutout_logo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeIconButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="-115dp"
        android:text="Change Icon"
        android:textSize="30sp"
        android:visibility="invisible"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="10dp"
        android:hint="Username"/>

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username"
        android:visibility="invisible"
        android:hint="Email" />

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signin_button"
        android:hint="Password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Log in"/>


</RelativeLayout>
